<p id="notice"><%= notice %></p>

<h1>Wikis</h1>

<% @wikis.each do |wiki| %>
<p><%= wiki.title %></p>
<%= link_to 'Show', wiki %>
<% if policy(wiki).edit? %>
<%= link_to 'Edit', edit_wiki_path(wiki) %>
<% end %>
<% if policy(wiki).destroy? %>
<%= link_to 'Destroy', wiki, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
<br>
<br>
<% end %>

<% if policy(@wikis).new? %>
<%= link_to 'New Wiki', new_wiki_path %>
<% end %>
